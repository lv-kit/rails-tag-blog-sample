<%= form_for(@category, url: {action: 'create'}) do |f| %>
  <div class="field">
    <%= f.label :name, "カテゴリー名" %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :slug, "スラッグ" %><br>
    <%= f.text_field :slug %>
  </div>

  <div class="field">
    <%= f.label :description, "カテゴリー概要" %><br>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.submit "カテゴリー追加" %>
  </div>
<% end %>